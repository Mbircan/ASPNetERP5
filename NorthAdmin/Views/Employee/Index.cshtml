@model List<NorthAdmin.Models.Employee>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/shared/_AdminLayout.cshtml";
}
<h2>Çalışanlar</h2>
<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>#</th>
					<th>İsim</th>
					<th>Soyisim</th>
					<th>Ünvan</th>
                    <th>Amiri</th>
					<th>Düzenle</th>
				</tr>
			</thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].FirstName</td>
                        <td>@Model[i].LastName</td>
                        <td>@Model[i].Title</td>
                        @if (Model[i].Employee1 != null)
                        {
                            <td>
                                @Model[i].Employee1.FirstName @Model[i].Employee1.LastName
                                <small>@Model[i].Title</small>
                            </td>
                        }
                        else
                        {
                            <td>-</td>
                        }
                        <td>
                            <a class="btn btn-info btn-block" href="@Url.Action("Detail","Employee",new {id=Model[i].EmployeeID })">Detay</a>
                            <a class="btn btn-warning btn-block" href="@Url.Action("Update","Employee",new {id=Model[i].EmployeeID })">Düzenle</a>
                            @if (Model[i].Orders.Count == 0)
                            {
                                <a class="btn btn-danger btn-block" href="@Url.Action("Delete","Employee",new {id=Model[i].EmployeeID })">Sil</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
		</table>
	</div>
</div>