@model List<NorthAdmin.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_AdminLayout.cshtml";
}

<h2>Ürünler <small>Toplam : @Model.Count</small></h2>
<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<table class="table table-striped table-hover">
			<thead>
			<tr>
				<th>#</th>
				<th>Ürün Adı</th>
				<th>Birim Fiyat</th>
				<th>Düzenle</th>
			</tr>
			</thead>
			<tbody>
			@for (int i = 0; i < Model.Count; i++)
			{
				<tr>
					<td>@(i + 1)</td>
					<td>@Model[i].ProductName</td>
					<td>@Model[i].UnitPrice</td>
					<td>
						<a class="btn btn-info btn-block" href="@Url.Action("Detail","Product",new {id=Model[i].ProductID })">Detay</a>
						<a class="btn btn-warning btn-block" href="@Url.Action("Update","Product",new {id=Model[i].ProductID })">Düzenle</a>
						@if (Model[i].Order_Details.Count == 0)
						{
							<a class="btn btn-danger btn-block" href="@Url.Action("Delete","Product",new {id=Model[i].ProductID })">Sil</a>
						}
					</td>
				</tr>
			}
			</tbody>
		</table>
	</div>
</div>

