@model List<NorthAdmin.Models.Supplier>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_AdminLayout.cshtml";
}

<h2>Tedarikçiler</h2>
<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<table class="table table-striped table-hover">
			<thead>
			<tr>
				<th>#</th>
				<th>Şirket</th>
				<th>Yetkili Kişi</th>
				<th>Ünvan</th>
				<th>Ülke</th>
				<th>Düzenle</th>
			</tr>
			</thead>
			<tbody>
			@for (int i = 0; i < Model.Count; i++)
			{
				<tr>
					<td>@(i + 1)</td>
					<td>@Model[i].CompanyName</td>
					<td>@Model[i].ContactName</td>
					<td>@Model[i].ContactTitle</td>
					<td>@Model[i].Country</td>
					<td>
						<a class="btn btn-info btn-block" href="@Url.Action("Detail","Supplier",new {id=Model[i].SupplierID})">Detay</a>
						<a class="btn btn-warning btn-block" href="@Url.Action("Update","Supplier",new {id=Model[i].SupplierID})">Düzenle</a>
						@if (Model[i].Products.Count == 0)
						{
							<a class="btn btn-danger btn-block" href="@Url.Action("Delete","Supplier",new {id=Model[i].SupplierID})">Sil</a>
						}
					</td>
				</tr>
			}
			</tbody>
		</table>
	</div>
</div>

