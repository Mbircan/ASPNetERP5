@model List<NorthAdmin.Models.Shipper>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_AdminLayout.cshtml";
}

<h2>Kargo Şirketleri</h2>
<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="text-danger">@Html.ValidationSummary()</div>
		<table class="table table-striped table-hover">
			<thead>
			<tr>
				<th>#</th>
				<th>Şirket</th>
				<th>Telefon</th>
				<th>Düzenle</th>
			</tr>
			</thead>
			<tbody>
			@for (int i = 0; i < Model.Count; i++)
			{
				<tr>
					<td>@(i + 1)</td>
					<td>@Model[i].CompanyName</td>
					<td>@Model[i].Phone</td>
					<td>
						<a class="btn btn-info btn-block" href="@Url.Action("Detail", "Shipper", new {id = Model[i].ShipperID})">Detay</a>
						<a class="btn btn-warning btn-block" href="@Url.Action("Update", "Shipper", new {id = Model[i].ShipperID})">Düzenle</a>
						@if (Model[i].Orders.Count == 0)
						{
							<a class="btn btn-danger btn-block" href="@Url.Action("Delete", "Shipper", new {id = Model[i].ShipperID})">Sil</a>
						}
					</td>
				</tr>
			}
			</tbody>
		</table>
	</div>
</div>

