@model List<NorthAdmin.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_AdminLayout.cshtml";
}

<h2>Kategoriler</h2>
<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<table class="table table-striped table-hover">
			<thead>
			<tr>
				<th>#</th>
				<th>Kategori Adı</th>
				<th>Açıklama</th>
				<th>Düzenle</th>
			</tr>
			</thead>
			<tbody>
			@for (int i = 0; i < Model.Count; i++)
			{
				<tr>
					<td>@(i+1)</td>
					<td>@Model[i].CategoryName</td>
					<td>@Model[i].Description</td>
					<td>
						<a class="btn btn-info btn-block" href="@Url.Action("Detail","Category",new {id=Model[i].CategoryID })">Detay</a>
						<a class="btn btn-warning btn-block" href="@Url.Action("Update","Category",new {id=Model[i].CategoryID })">Düzenle</a>
						@if (Model[i].Products.Count == 0)
						{
							<a class="btn btn-danger btn-block" href="@Url.Action("Delete","Category",new {id=Model[i].CategoryID })">Sil</a>
						}
					</td>
				</tr>
			}
			</tbody>
		</table>
	</div>
</div>

