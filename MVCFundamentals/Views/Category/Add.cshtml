@model MVCFundamentals.Models.Category
@{
    ViewBag.Title = "Add";
}

<h2>Yeni Kategori Ekle</h2>
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="text-danger">@Html.ValidationSummary()</div>
        @using (Html.BeginForm("Add", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()           
            <div class="form-group">
                @Html.LabelFor(x=>x.CategoryName,new { @class = "col-sm-2 control-label"})
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori Adı" })
                </div>
            </div>           
            <div class="form-group">
                @Html.LabelFor(x => x.Description, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Açıklama" })
                </div>
            </div>           
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Kategori Ekle</button>
                    <button type="reset" class="btn btn-warning">Temizle</button>
                </div>
            </div>
        }
        </div>
    </div>
