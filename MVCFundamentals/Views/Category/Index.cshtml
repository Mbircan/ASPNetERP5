@model List<MVCFundamentals.Models.Category>
@{
    ViewBag.Title = "Index";
}

<h2>Kategoriler <small>Toplam : @Model.Count</small></h2>
<h3><a class="btn btn-success btn-lg" href="@Url.Action("Add","Category")">Yeni Kategori Ekle</a></h3>
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kategori Adı</th>
                    <th>Açıklama</th>
                    <th>Düzenle</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i+1)</td>
                        <td>@Model[i].CategoryName</td>
                        <td>@Model[i].Description</td>
                        <td>
                            <a class="btn btn-info btn-block" href="@Url.Action("Detail","Category",new {id=Model[i].CategoryID })" target="_blank">Detay</a>
                            <a class="btn btn-warning btn-block" href="@Url.Action("Update","Category",new {id=Model[i].CategoryID })" target="_blank">Düzenle</a>
                            @if (Model[i].Products.Count == 0)
                            {
                                <a class="btn btn-danger btn-block" href="@Url.Action("Delete","Category",new {id=Model[i].CategoryID })" target="_blank">Sil</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

