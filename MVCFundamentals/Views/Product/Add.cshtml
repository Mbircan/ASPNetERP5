@model MVCFundamentals.ViewModels.ProductViewModel
@{
    ViewBag.Title = "Add";
}

<h2>Yeni Ürün Ekle</h2>
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="text-danger">@Html.ValidationSummary()</div>
        @using (Html.BeginForm("Add", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.Product.ProductName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form-control", placeholder = "Ürün Adı" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Product.CategoryID, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.Product.CategoryID, new SelectList(Model.Categories, "CategoryID", "CategoryName"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Product.UnitPrice, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Product.UnitPrice, new { @class = "form-control", placeholder = "Birim Fiyat" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Product.UnitsInStock, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Product.UnitsInStock, new { @class = "form-control", placeholder = "Stok" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Product.Discontinued, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.CheckBoxFor(x => x.Product.Discontinued, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-info">Ürün Ekle</button>
                    <button type="reset" class="btn btn-warning">Temizle</button>
                </div>
            </div>
        }
    </div>
</div>
