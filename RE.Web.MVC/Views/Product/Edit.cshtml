@model RE.Models.Entities.Product
@{
    ViewBag.Title = "Edit";
}
<div class="row">
    <div class="col-md-offset-1 col-md-10">
        <div class="text-danger">@Html.ValidationSummary()</div>
        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.ProductID)
            if (string.IsNullOrEmpty(Model.FotoUrl))
            {
                <div class="col-md-offset-2 col-md-10">
                    <img src="~/Uploads/nofoto.png" class="img-rounded text-center" width="200" height="200" />
                </div>
            }
            else
            {
                <div class="col-md-offset-2 col-md-10">
                    <img src="@Model.FotoUrl" class="img-rounded text-center" width="200" height="200" />
                </div>
            }
            <div class="form-group">
                @Html.LabelFor(x => x.ProductName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", placeholder = "Ürün Adı" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.UnitPrice, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control", placeholder = "Fiyat" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.UnitsInStock, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control", placeholder = "Stok" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Discontinued, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-1">
                    @Html.CheckBoxFor(x => x.Discontinued, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x=>x.FotoUrl, new {@class="col-sm-2 control-label"})
                <div class="col-sm-10">
                    @Html.TextBoxFor(x=>x.Foto,new {@class="form-control",type="file",multiple="false"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-info">Güncelle</button>
                    <button type="reset" class="btn btn-warning">Temizle</button>
                </div>
            </div>}
    </div>
</div>
