@model RE.Models.Entities.Category
@{
    ViewBag.Title = "Edit";
}

<h2>Düzenle</h2>
<div class="row">
    <div class="col-md-offset-1 col-md-10">
        <div class="text-danger">@Html.ValidationSummary()</div>
        @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.CategoryID)
            <div class="form-group">
                @Html.LabelFor(x => x.CategoryName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori Adı" })
                    <span class="text-danger">@Html.ValidationMessageFor(x=>x.CategoryName)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Description, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Açıklama" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Güncelle</button>
                    <button type="reset" class="btn btn-warning">Temizle</button>
                </div>
            </div>
        }
    </div>
</div>

